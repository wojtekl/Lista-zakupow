<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/ogolne">

        <EditTextPreference
            app:defaultValue="@string/APLIKACJA_WERSJA"
            app:enabled="false"
            app:key="aplikacjaWersja"
            app:persistent="false"
            app:title="@string/wersja_aplikacji"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="skorkaCiemna"
            app:title="@string/ciemna_skorka" />

        <Preference
            app:key="pokazInstrukcje"
            app:title="@string/pokaz_instrukcje" />

        <EditTextPreference
            app:dependency="aktywujRyzykowne"
            app:key="identyfikator"
            app:title="@string/identyfikator"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:dependency="aktywujRyzykowne"
            app:key="wyczyscWszystko"
            app:title="@string/wyczysc_wszystko" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/zetony">

        <EditTextPreference
            app:defaultValue="@string/ZETONY_PREMIA"
            app:enabled="false"
            app:key="zetony"
            app:title="@string/zetony"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="zdobadzZetony"
            app:summary="@string/zobaczysz_reklame"
            app:title="@string/zdobadz_zetony" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/komunikacja">

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="cenyUdostepniaj"
            app:summary="@string/zdobywaj_zetony"
            app:title="@string/udostepniaj_ceny" />

        <Preference
            app:key="produktySpolecznosci"
            app:title="@string/produkty_spolecznosci" />

        <Preference
            app:key="udostepnijAplikacje"
            app:title="@string/udostepnij_aplikacje" />

        <Preference
            app:key="inneAplikacje"
            app:title="@string/inne_aplikacje" />

        <EditTextPreference
            app:dependency="aktywujRyzykowne"
            app:key="APIAdres"
            app:title="@string/adres_API"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <SwitchPreferenceCompat
        app:defaultValue="false"
        app:key="aktywujRyzykowne"
        app:persistent="false"
        app:title="@string/aktywuj_ryzykowne" />

</androidx.preference.PreferenceScreen>